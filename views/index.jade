extends layout

block content
	div#container.centered
		- if (images && images.length) 
			- images.forEach(function (image) {
			a(class='imlink', rel='lightbox[all]', href=image.url)
				div.imgbox
					img(class='image', src=cloudinary.url(image.public_id + '.' + image.format, 
						{ width: 500, height: 500, crop: 'limit', version:image.version }))
					
			- })
	nav#page-nav
		- if (next)
			- if (title !== "style#tags") 
				a(href='/load/' + tag + "/" + next) next
			- else
				a(href='/load/' + next) next
	div.loadmore